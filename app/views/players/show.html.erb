<div class="container">
  <div class="player-card">
      <div class="row">
      <div class="col-6 col-md-4">
        <div class="player-info">
        <h1> <%= @player.player_name %> </h1>
        <h3>Description:</h3>
        <p><%= @player.player_description %></p>
        <p><b>Location</b> : <%= @player.player_nationality %></p>
        <p><b>Price</b> : <%= @player.player_price %> € per day</p>
        <p><b>Status</b> : <% if @player.player_availability %> Available </p>
          <% else %>
            Not available
          <% end %>

            <div class ="card-options">
              <%= link_to "Book", new_player_booking_path(@player), class: 'btn btn-primary' %>
            </div>

          <!-- If I am the owner, display the link-->
          <!-- otherwise, don't -->
          <% if current_user == @player.user %>
            <%= link_to "Edit information", edit_player_path(@player), class: 'btn btn-primary' %>
            <%= link_to "Delete", player_path(@player), class: 'btn btn-primary',
            data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
          <% else %>
            <!-- nothing -->
          <% end %>
        </div>
      </div>
        <div class="col-6 col-md-8">
            <%= cl_image_tag @player.avatar.key, class:"player-photo" %>
        </div>
        </div>
    </div>
        <div class ="card-options">
          <%= link_to "Display all Players", players_path, class: 'btn btn-primary' %>
        </div>
    </div>
  </div>


  </div>
