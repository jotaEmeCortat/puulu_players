<div class="container">
  <div class="">
    <%= simple_form_for [@player] do |f| %>
    <%= f.input :player_name %>
    <%= f.input :player_email %>
    <%= f.input :player_nationality %>
    <%= f.input :player_gender %>
    <%= f.input :player_description, as: :text %>
    <%= f.input :player_date_of_birth, as: :string, required: false, input_html: { data: { controller: "datepicker" }} %>
    <%= f.input :player_position %>
    <%= f.input :player_role %>
    <%= f.input :player_handedness %>
    <%= f.input :player_social %>
    <%# A VERIFIER %>
    <%# https://medium.com/earthvectors/validations-and-file-caching-using-activestorage-e16418060f8f %>
    <%= f.input :player_avatar_image, as: :file %>
    <%# <%= f.input :player_avatar_image_cache, as: :hidden %>
    <%= f.input :player_banner_image, as: :file %>
    <%# <%= f.input :player_banner_image_cache, as: :hidden %>
    <%# https://stackoverflow.com/questions/52236887/customize-image-upload-field-in-simple-form-carrierwave %>
    <%= f.input :player_availability %>
    <%= f.input :player_availability_period, as: :string, required: false, input_html: { data: { controller: "datepicker" }} %>
    <%= f.input :player_rating %>
    <%= f.input :player_price %>

    <%= f.submit "Save Player", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
