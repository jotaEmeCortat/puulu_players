<div class="container px-4">
  <section class="w-100 d-flex justify-content-center">
    <div class="w-50 my-5 p-4 rounded-3 border border-black">
      <h2 class="title mb-4">Change your password</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

          <div class="form-outline mb-4">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control border-black" } %>
          </div>

          <div class="form-outline mb-4">
            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control border-black" } %>
          </div>

          <%= f.button :submit, "Change my password", :class => "btn btn-primary mb-4 w-100"  %>

          <!-- Simple link -->
          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </section>
</div>
