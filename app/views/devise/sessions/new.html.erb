<div class="pageHero">
  <div class="wrapper">
    <h1 class="pageTitle">Your Account</h1>
  </div>
</div>

<div class="my_container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}, input_html: { class: "form__login-box"})  do |f| %>

    <%= f.error_notification :class =>"" %>

    <div class="wrapper">

      <div class="col-6">
        <h1>Sign In</h1>

        <!-- Email input -->
        <div class="form__group">
          <%= f.input :email,
                      placeholder: "Email Address",
                      required: true,
                      autofocus: true%>
        </div>

        <!-- Password input -->
        <div class="form__group">
          <%= f.input :password,
                      placeholder: "Password",
                      required: true%>
        </div>

        <div class="form__group">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"link__login"%>
          <%= f.button :submit, "Sign in", :class => "btn btn-primary btn-50", style: "float: right,
  width: 50%;"%>
        </div>

        <div class="or">
          <span>or login with</span>
        </div>

        <div class="social-login">
          <a href="/" class="btn facebook-button">
            <img src="https://users.premierleague.com/static/libsass/plusers/dist/img/svg/icon-facebook.svg" aria-hidden="true">
              Facebook
          </a>

          <a href="/" class="btn twitter-button">
            <img src="https://users.premierleague.com/static/libsass/plusers/dist/img/svg/icon-twitter.svg" aria-hidden="true">
              Twitter
          </a>

          <a href="/" class="btn google-button">
            <img src="https://users.premierleague.com/static/libsass/plusers/dist/img/svg/icon-google.svg" aria-hidden="true">
              Google
          </a>

          <a href="/" class="btn apple-button">
            <img src="https://users.premierleague.com/static/libsass/plusers/dist/img/svg/icon-apple.svg" aria-hidden="true">
              Apple
          </a>
        </div>

      </div>

      <div class="col-6">
        <h1>Register</h1>
        <div class="reg-spacer">
          <h2>Don't have a account?</h2>
          <p>In that case, you are missing out on:</p>
          <%= link_to "Register", new_registration_path(resource_name), class: "btn-highlight btn button--full" %>
        </div>
      </div>

    </div>
  <% end %>
</div>
