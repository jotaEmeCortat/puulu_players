<div class="p-5 my-3 bg-light">
  <h1 class="display-4">Your Account</h1>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false})  do |f| %>
        <%= f.error_notification :class =>"" %>

    <div class="row align-items-start">
      <div class="col">
        <h3 class="bg-light py-2 px-3 mb-4">Sign In</h3>

        <!-- Email input -->
        <div class="mb-3">
          <%= f.input :email,
                      placeholder: "Email Address",
                      required: false,
                      autofocus: true%>
        </div>

        <!-- Password input -->
          <div class="mb-3">
            <%= f.input :password,
                        placeholder: "Password",
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'default_class'} %>
          </div>

          <div class="d-flex w-100 justify-content-between align-items-md-center">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:""%>
            <%= f.button :submit, "Sign in", :class => "btn btn-primary w-50"%>
          </div>
      </div>

      <div class="col">
        <h3 class="bg-light py-2 px-3 mb-4">Register</h3>
        <div class="p-4 bg-light">
          <p>Don't have a account?</p>
          <%= link_to "Register", new_registration_path(resource_name), class: "btn btn-secondary w-100" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
