<div class="p-5 my-3 bg-light">
  <h1 class="display-4">Your Account</h1>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url:     registration_path(resource_name))  do |f| %>
    <%= f.error_notification %>

    <h3 class="bg-light py-2 px-3 mb-4">Creating a new account</h3>

    <div class="row justify-content-center">
      <div class="col-6">

        <!-- Name input -->
        <div class="mb-3">
          <%= f.input :team_name,
                      placeholder: "Team name",
                      required: true,
                      autofocus: true%>
        </div>


        <!-- Email input -->
        <div class="mb-3">
          <%= f.input :email,
                        placeholder: "Email Address",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email"}%>
        </div>

        <!-- Password input -->
        <div class="mb-3">
          <%= f.input :password,
                    placeholder: "Password",
                    required: false,
                    input_html: { autocomplete: "current-password"}%>
        </div>

        <!-- Country image input -->
        <div class="mb-3">
          <%= f.input  :team_country,
                          collection: User::COUNTRY,
                          required: true,
                          autofocus: true%>
        </div>

        <!-- Badge image input -->
        <div class="mb-3">
          <%= f.input :team_badge_image, as: :file,
                          placeholder: "Team badge",
                          required: true%>
        </div>

        <!-- Banner image input -->
        <div class="mb-3">
          <%= f.input :team_banner_image, as: :file,
                      placeholder: "Team badge",
                      required: true%>
        </div>

        <!-- Banner image input -->
        <div class="mb-3">
          <%= f.input :team_description, as: :text,
                      placeholder: "Team badge",
                      required: true%>
        </div>

        <!-- Submit button -->
        <%= f.button :submit, "Sign in", :class => "btn btn-primary w-50"%>
    </div>
  <% end %>
</div>
