<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-med-8">
      <div class="">
        <h3><%= current_user.team_name %>, book the beautiful <%= @player.player_name %>!</h3>
      </div>
      <div id='player-booking-dates' data-unavailable="<%= @player.unavailable_dates.to_json %>" class="form">
        <%= simple_form_for [@player, @booking] do |f| %>
          <%= f.input :start_date, label: "Starting Date", as: :string, required: false, input_html: { data: { controller: "datepicker" }} %>
          <%= f.input :end_date, label: "Ending Date", as: :string, required: false, input_html: { data: { controller: "datepicker" }} %>
          <%= f.submit "Book!", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div style="margin-top: 25px; margin-bottom:25px">
        <hr>
      </div>
      <div class="booking-show-host-info">
        <p>Hosted by <%= link_to @player.user.team_nam, dashboard_path(@player.user) %></p>
      </div>
    </div>
  </div>
</div>
