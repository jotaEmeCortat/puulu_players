<h1 class="">Your bookings</h1>
<div class="">
  <% @bookings.each do |booking| %>
      <div class="">
        <%= cl_image_tag booking.player.player_avatar_image %>
        <div class="">
          <div>
            <h2><%= link_to booking.player.player_name, player_booking_path(booking.player, booking) %></h2>
            <p>Arrival: <%= booking.start_date %></p>
            <p>Departure: <%= booking.end_date %></p>
            <% if policy(booking).destroy? %>
              <%= link_to "CANCEL BOOKING", booking_path(booking),
              data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
            <% end %>
          </div>
          <% booking.player_price = (booking.end_date - booking.start_date) * booking.player.player_price %>
          <h2 class="">Total price: <%= booking.player_price %></h2>
        </div>
      </div>
  <% end %>
</div>
